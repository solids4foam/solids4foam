FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

d2dt2Schemes
{
    //default                 steadyState;
    default                 Euler;
    //default                 backward;
}

ddtSchemes
{
    //default                 steadyState;
    default                 Euler;
    //default                 backward;
}

gradSchemes
{
    //default                pointCellsLeastSquares;
    // default                Gauss linear;
    default                leastSquaresS4f;
}

divSchemes
{
    default                 none;
    div(sigma)              Gauss linear;
    div((impK*grad(D)))     Gauss linear;
}

laplacianSchemes
{
    default                 none;
    laplacian(DD,D)         Gauss linear corrected;
    // laplacian(DD,D)         Gauss linear skewCorrected;
}

snGradSchemes
{
    // default                 skewCorrected;
    default                 corrected;
}

interpolationSchemes
{
    default                 linear;
    // interpolate(impK)       linear;
    // interpolate(grad(D))    skewCorrected linear;
    // interpolate(D)          skewCorrected linear;
}

