EXE_LIBS = \
    -L$(FOAM_USER_LIBBIN) \
    $(VERSION_SPECIFIC_LIBS) \
    -lblockCoupledSolids4FoamTools \
    -lsolids4FoamModels \
    -lfiniteVolume \
    -ldynamicFvMesh \
    -ldynamicMesh \
    -lmeshTools \
    -ltopoChangerFvMesh \
    $(GFORTRAN_LIBS)
