FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    symmetry-x
    {
        type         symmetryPlane;
    }
    symmetry-y
    {
        type         symmetryPlane;
    }
    outlet
    {
        type         fluxCorrectedVelocity;
    }
    inlet
    {
        type         fluxCorrectedVelocity;
    }
    wall
    {
        // Default Dirichlet-Neumann approach
        type         newMovingWallVelocity;
        value        uniform (0 0 0);

        // Robin condition approach
        // type         elasticWallVelocity;
        // value        uniform (0 0 0);
    }
}


// ************************************************************************* //
