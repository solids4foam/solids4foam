        mergeLevels     1;
    }

    "U|UFinal"
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1e-07;
        relTol          0;
        minIter         1;
    }

    "epsilon|k|omega"
    {
        solver           PBiCG;
        preconditioner   DILU;

        minIter          1;
        maxIter          500;
        tolerance        1e-06;
        relTol           0;
    };
}


