FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    inlet
    {
      //type            fixedValue;
      //value           uniform (1 0 0);
      type            fixedProfile;
    profile         polynomial
    (
        ((1.5 0 0)  (0 0 0))  // Coefficient for y^0 = 1 (constant term)
        ((-6 0 0) (2 0 0))  // Coefficient for y^2 = -6
    );
    direction       (0 1 0);  // Profile varies along the y-direction
    origin          0.5;        // Starting position of the profile in y
    }

    

    walls
    {
        type            noSlip;
    }
    
    outlet
    {
        type            zeroGradient;
    }

    defaultFaces
    {
        type            empty;
    }

    interface
    {
        type            newMovingWallVelocity;
        value           uniform (0 0 0);
    }
}


// ************************************************************************* //
