FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 323;

boundaryField
{
    left
    {
        type            thermalRobin;
        
        // neiTemperature  uniform 323;
        // neiHeatFlux     uniform 0;
        // deltaByLambda   uniform 0.02;

        lambda k;
        
        value           $internalField;
    }
    right
    {
        type            fixedValue;
        value           uniform 323;
    }

    bottom
    {
        type            zeroGradient;
        value           $internalField;
    }
    
    top
    {
        type            zeroGradient;
        value           $internalField;
    }

    frontAndBack
    {
        type            empty;
    }
}

