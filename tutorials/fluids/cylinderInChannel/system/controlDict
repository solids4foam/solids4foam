FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     solids4Foam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         50;

deltaT          0.025;

writeControl    timeStep;

writeInterval   4;

purgeWrite      200;

writeFormat     ascii;

writePrecision  6;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

adjustTimeStep no;

maxCo 10;

functions
{
   forces
   {
       type                forces;
       functionObjectLibs  ( "libforces.so" );
       "writeControl|outputControl" timeStep;
       outputInterval      1;
       patches             (cylinderWall);
       "pName|p"           p;
       "UName|U"           U;
       "rhoName|rho"       rhoInf;
       log                 true;
       rhoInf              1;
       CofR                (0.5 0.1 0);
   }
}

