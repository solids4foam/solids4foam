FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    Dp
    {
        solver 	        BiCGStab;
        preconditioner  Cholesky;

        tolerance       1e-9;
        relTol          0.1;

        minIter         1;
        maxIter         500;
    }

    "D|DD"
    {
        solver          PCG;
        preconditioner  FDIC;
        tolerance       1e-09;
        relTol          0.1;
    }

    sigmaHyd
    {
        solver          PCG;
        preconditioner  FDIC;
        tolerance       1e-09;
        relTol          0.1;
    }
}


relaxationFactors
{
    // Under-relaxating the DD equation by 0.99-0.9999 can improve convergence in
    // some cases, in particular when there are solidContact boundaries
    equations
    {
        //"D|DD"   0.999;
    }

    // Under-relaxating the DD field by 0.1-0.9 can improve convergence in some
    // cases
    fields
    {
        "D|DD"   0.9;
    }
}

