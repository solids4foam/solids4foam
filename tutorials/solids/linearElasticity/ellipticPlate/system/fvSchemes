FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

d2dt2Schemes
{
    default     steadyState;
}

ddtSchemes
{
    default     steadyState;
}

gradSchemes
{
     default                none;
}

divSchemes
{
    default                 none;
    fvmDiv(sigma)           pointGaussLeastSquares;
}

laplacianSchemes
{
    default                 none;
    fvmBlockLaplacian(D)    pointGaussLeastSquaresLaplacian;
    fvmBlockLaplacianTranspose(D) pointGaussLeastSquaresLaplacianTranspose;
    fvmBlockLaplacianTrace(D) pointGaussLeastSquaresLaplacianTrace;
}

snGradSchemes
{
    default                 none;
}

interpolationSchemes
{
    default                 none;
    mu                      linear;
    lambda                  linear;
}

