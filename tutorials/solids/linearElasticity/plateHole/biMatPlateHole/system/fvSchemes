FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

d2dt2Schemes
{
    default            steadyState;
}

ddtSchemes
{
    default            steadyState;
}

gradSchemes
{
    default            leastSquares;
    //default            cellLimited extendedLeastSquares 0 1;
}

divSchemes
{
    default            Gauss linear;
}

laplacianSchemes
{
    default            none;
    laplacian(DD,D)    Gauss linear corrected;
    laplacian(DDD,DD)  Gauss linear corrected;
}

snGradSchemes
{
    default            none;
    snGrad(D)          corrected;
    snGrad(DD)         corrected;
}

interpolationSchemes
{
    default            none;

    // For multi-material cases, linear seems better for linGeomSolid, whereas
    // harmonic seems better for unsLinGeomSolid
    //interpolate(impK)  linear;
    interpolate(impK)  harmonic;

    interpolate(grad(D)) linear;
    interpolate(sigma0) linear;
}

// ************************************************************************* //
