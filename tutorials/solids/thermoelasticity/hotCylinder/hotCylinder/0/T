FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 50;

boundaryField
{
    left
    {
        type            symmetryPlane;
    }
    bottom
    {
        type            symmetryPlane;
    }

    inside
    {
        type            fixedValue;
        value           uniform 100;
    }
    outside
    {
        type            fixedValue;
        value           uniform 0;
    }
    front
    {
        type            empty;
    }
    back
    {
        type            empty;
    }
}

