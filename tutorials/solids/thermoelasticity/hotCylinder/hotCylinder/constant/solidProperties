//solidModel     weakThermalLinearGeometry;
solidModel     thermalLinearGeometry;
//solidModel     linearGeometryTotalDisplacement;

"linearGeometryCoeffs|thermalLinearGeometryCoeffs|weakThermalLinearGeometryCoeffs"
{
    // Maximum number of correctors
    nCorrectors    1000;

    // Solution tolerance
    solutionTolerance 1e-06;

    // Alternative solution tolerance
    alternativeTolerance 1e-07;

    // Write frequency for the residuals
    infoFrequencyT  100;
}

linearGeometryTotalDisplacementCoeffs
{
    // Maximum number of correctors
    nCorrectors     10000;

    // Solution tolerance for displacement
    solutionTolerance 1e-06;

    // Alternative solution tolerance for displacement
    alternativeTolerance 1e-07;

    // Material law solution tolerance
    materialTolerance 1e-05;

    // Write frequency for the residuals
    infoFrequency   100;
}

