FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    inlet1
    {
        type            fixedValue;
        value           uniform (0.1 0 0);
    }

    inlet2
    {
        type            scaledFixedValue;

        // Time vs scale factor
        scale table
        (
            (0.0 0.0)
            (0.1 1.0)
            (0.2 0.0)
        );

        // The true velocity is the reference value times the scale factor
        refValue
        {
            type            fixedValue;
            value           uniform (0 -1 0);
        }
    }

    interface
    {
        type            newMovingWallVelocity;
        value           uniform (0 0 0);
    }

    outlet
    {
        type            zeroGradient;
    }
    
    frontAndBack
    {
        type            empty;
    }
}


// ************************************************************************* //
